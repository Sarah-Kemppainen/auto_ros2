        <device reference="depth_camera" type="Camera">
            <ros>
                <!-- TODO: use Zed stuff instead of sample info -->
                <!-- FIXME: this isn't a depth camera lol -->
                <topicName>/sensors/depth_image</topicName>
                <fieldOfView>2.0943951</fieldOfView>
                <width>1920</width>
                <height>1080</height>
            </ros>
        </device>

        <device reference="mono_camera" type="Camera">
            <ros>
                <!-- TODO: use real camera specs -->
                <topicName>/sensors/mono_image</topicName>
                <fieldOfView>2.0943951</fieldOfView>
                <width>1920</width>
                <height>1080</height>
            </ros>
        </device>

        <device reference="gps" type="GPS">
            <ros>
                <topicName>/sim/gps</topicName>
                <type>Satellite</type>
                <accuracy>0.02</accuracy> <!-- in meters -->
            </ros>
        </device>

        <!--
        define motors n all that
         -->
        <device reference="left_front_wheel_motor" type="Motor">
            <ros />
        </device>
        <device reference="left_middle_wheel_motor" type="Motor">
            <ros />
        </device>
        <device reference="left_back_wheel_motor" type="Motor">
            <ros />
        </device>
        <device reference="right_front_wheel_motor" type="Motor">
            <ros />
        </device>
        <device reference="right_middle_wheel_motor" type="Motor">
            <ros />
        </device>
        <device reference="right_back_wheel_motor" type="Motor">
            <ros />
        </device>
    </webots>
</robot>
