<?xml version="1.0" ?>
<robot name="REMI">
    <webots>
        <plugin type="soro_simulator_driver.driver.SoroDriver" />

        <!--
        name all the sensors.

        note that the IMU is a combo of Gyro + Accelerometer + Compass
         -->
        <plugin type="webots_ros2_driver::Ros2IMU">
            <inertialUnitName>inertial_unit</inertialUnitName>
            <gyroName>gyro</gyroName>
            <accelerometerName>accelerometer</accelerometerName>
        </plugin>

        <!-- <device reference="gyro" type="Gyro">
