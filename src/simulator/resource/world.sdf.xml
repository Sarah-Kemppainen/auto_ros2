<?xml version="1.0" ?>
<sdf version="1.8">
    <world name="car_world">
        <physics name="default_physics" default="true" type="ode">
            <max_step_size>0.001</max_step_size>
            <real_time_factor>1.0</real_time_factor>
        </physics>

        <!-- this makes the world use wgs84 coordinates for everything -->
        <spherical_coordinates>
            <surface_model>EARTH_WGS84</surface_model>
            <world_frame_orientation>ENU</world_frame_orientation>
            <latitude_deg>-0.0</latitude_deg>
            <longitude_deg>-0.0</longitude_deg>
            <elevation>0</elevation>
            <heading_deg>0</heading_deg>
        </spherical_coordinates>

        <plugin
            filename="libignition-gazebo-physics-system.so"
            name="ignition::gazebo::systems::Physics"
        >
        </plugin>
        <plugin
            filename="libignition-gazebo-user-commands-system.so"
            name="ignition::gazebo::systems::UserCommands"
        >
        </plugin>
        <plugin
            filename="libignition-gazebo-scene-broadcaster-system.so"
            name="ignition::gazebo::systems::SceneBroadcaster"
        >
        </plugin>
        <plugin
            filename="libignition-gazebo-imu-system.so"
            name="ignition::gazebo::systems::Imu"
        >
        </plugin>
        <plugin
            filename="libignition-gazebo-navsat-system.so"
            name="ignition::gazebo::systems::NavSat"
        >
            </plugin>

        <light type="directional" name="sun">
            <cast_shadows>true</cast_shadows>
            <pose>0 0 10 0 0 0</pose>
            <diffuse>0.8 0.8 0.8 1</diffuse>
            <specular>0.2 0.2 0.2 1</specular>
            <attenuation>
                <range>1000</range>
                <constant>0.9</constant>
                <linear>0.01</linear>
                <quadratic>0.001</quadratic>
            </attenuation>
            <direction>-0.5 0.1 -0.9</direction>
        </light>

        <model name="ground_plane">
            <static>true</static>
            <link name="link">
                <collision name="collision">
                    <geometry>
                        <plane>
                        <normal>0 0 1</normal>
                        </plane>
                    </geometry>

                    <surface>
                        <friction>
                            <ode>
                                <mu>1.0</mu>
                                <mu2>1.0</mu2>
                            </ode>
                        </friction>
                    </surface>
                </collision>
                <visual name="visual">
                <geometry>
                    <plane>
                    <normal>0 0 1</normal>
                    <size>100 100</size>
                    </plane>
                </geometry>
                <material>
                    <ambient>0.8 0.8 0.8 1</ambient>
                    <diffuse>0.8 0.8 0.8 1</diffuse>
                    <specular>0.8 0.8 0.8 1</specular>
                </material>
                </visual>
            </link>
        </model>

        <model name="remi" canonical_link="chassis">
            <pose relative_to='world'>0 0 0 0 0 0</pose>

            <!-- plugins to control each wheel :D -->
            <plugin
                name="gz::sim::systems::JointController"
                filename="gz-sim-joint-controller-system"
            >
                <joint_name>left_front_wheel_joint</joint_name>
                <topic>/left_front_wheel/cmd_vel</topic>

            </plugin>

            <plugin
                name="gz::sim::systems::JointController"
                filename="gz-sim-joint-controller-system"
            >
                <joint_name>left_middle_wheel_joint</joint_name>
                <topic>/left_middle_wheel/cmd_vel</topic>
            </plugin>

            <plugin
                name="gz::sim::systems::JointController"
                filename="gz-sim-joint-controller-system"
            >
                <joint_name>left_back_wheel_joint</joint_name>
                <topic>/left_back_wheel/cmd_vel</topic>

            </plugin>

            <plugin
                name="gz::sim::systems::JointController"
                filename="gz-sim-joint-controller-system"
            >
                <joint_name>right_front_wheel_joint</joint_name>
                <topic>/right_front_wheel/cmd_vel</topic>

            </plugin>

            <plugin
                name="gz::sim::systems::JointController"
                filename="gz-sim-joint-controller-system"
            >
                <joint_name>right_middle_wheel_joint</joint_name>
                <topic>/right_middle_wheel/cmd_vel</topic>

            </plugin>

            <plugin
                name="gz::sim::systems::JointController"
                filename="gz-sim-joint-controller-system"
            >
                <joint_name>right_back_wheel_joint</joint_name>
                <topic>/right_back_wheel/cmd_vel</topic>

            </plugin>

                <link name="chassis">

                    <pose relative_to="__model__">0 0 0.2 0 0 0</pose>

                    <!-- add some sensors -->
                    <sensor name="imu_sensor" type="imu">
                        <always_on>1</always_on>
                        <update_rate>1</update_rate>
                        <visualize>true</visualize>
                        <topic>imu</topic>
                    </sensor>
                    <!-- note: "navsat" is used as a fancy name for gps -->
                    <sensor name="navsat" type="navsat">
                        <always_on>1</always_on>
                        <update_rate>1</update_rate>
                        <topic>/navsat</topic>
                    </sensor>

                    <!--inertial properties of the link mass, inertia matix-->
                    <inertial>
                        <mass>40.0</mass>
                        <inertia>
                            <ixx>0.095329</ixx>
                            <ixy>0</ixy>
                            <ixz>0</ixz>
                            <iyy>0.381317</iyy>
                            <iyz>0</iyz>
                            <izz>0.476646</izz>
                        </inertia>
                    </inertial>

                    <visual name="chassis_visual">
                            <geometry>
                            <box>
                                <!-- 549.3mm long, 514.4mm wide, 127mm tall -->
                                <!-- NOTE: if you change these, also change the collision below! -->
                                <size>0.5493 0.5144 0.127</size>
                            </box>
                            </geometry>
                            <material>
                            <ambient>0.0 0.0 1.0 1</ambient>
                            <diffuse>0.0 0.0 1.0 1</diffuse>
                            <specular>0.0 0.0 1.0 1</specular>
                            </material>
                        </visual>

                        <collision name="chassis_collision">
                            <geometry>
                                <box>
                                    <size>0.5493 0.5144 0.127</size>
                                </box>
                            </geometry>
                        </collision>
                </link>

                <!-- make all six wheels! -->
            <link name="left_front_wheel">
                <pose relative_to="chassis">0.194 0.2872 0 -1.5707 0 0</pose>
                <inertial>
                    <mass>1</mass>
                    <inertia>
                    <ixx>0.043333</ixx>
                    <ixy>0</ixy>
                    <ixz>0</ixz>
                    <iyy>0.043333</iyy>
                    <iyz>0</iyz>
                    <izz>0.08</izz>
                    </inertia>
                </inertial>
                <visual name="left_front_wheel_visual">
                    <geometry>
                    <cylinder>
                        <!-- TODO confirm real wheel radius -->
                        <radius>0.08</radius>
                        <!-- thickness of the wheel -->
                        <length>0.05</length>
                    </cylinder>
                    </geometry>
                    <material>
                    <ambient>1.0 0.0 0.0 1</ambient>
                    <diffuse>1.0 0.0 0.0 1</diffuse>
                    <specular>1.0 0.0 0.0 1</specular>
                    </material>
                </visual>
                <collision name="left_front_wheel_collision">
                    <geometry>
                        <cylinder>
                            <radius>0.08</radius>
                            <length>0.05</length>
                        </cylinder>
                    </geometry>

                    <surface>
                        <friction>
                            <ode>
                                <mu>1.0</mu>
                                <mu2>1.0</mu2>
                            </ode>
                        </friction>
                    </surface>
                </collision>
            </link>

            <link name="left_middle_wheel">
                <pose relative_to="chassis">0.0 0.2872 0 -1.5707 0 0</pose>
                <inertial>
                    <mass>1</mass>
                    <inertia>
                    <ixx>0.043333</ixx>
                    <ixy>0</ixy>
                    <ixz>0</ixz>
                    <iyy>0.043333</iyy>
                    <iyz>0</iyz>
                    <izz>0.08</izz>
                    </inertia>
                </inertial>
                <visual name="left_middle_wheel_visual">
                    <geometry>
                    <cylinder>
                        <radius>0.08</radius>
                        <length>0.05</length>
                    </cylinder>
                    </geometry>
                    <material>
                    <ambient>1.0 0.0 0.0 1</ambient>
                    <diffuse>1.0 0.0 0.0 1</diffuse>
                    <specular>1.0 0.0 0.0 1</specular>
                    </material>
                </visual>
                <collision name="left_middle_wheel_collision">
                <geometry>
                    <cylinder>
                        <radius>0.08</radius>
                        <length>0.05</length>
                    </cylinder>
                </geometry>

                <surface>
                    <friction>
                        <ode>
                            <mu>1.0</mu>
                            <mu2>1.0</mu2>
                        </ode>
                    </friction>
                </surface>
                </collision>
            </link>

            <link name="left_back_wheel">
                <pose relative_to="chassis">-0.194 0.2872 0 -1.5707 0 0</pose>
                <inertial>
                    <mass>1</mass>
                    <inertia>
                    <ixx>0.043333</ixx>
                    <ixy>0</ixy>
                    <ixz>0</ixz>
                    <iyy>0.043333</iyy>
                    <iyz>0</iyz>
                    <izz>0.08</izz>
                    </inertia>
                </inertial>
                <visual name="left_back_wheel_visual">
                    <geometry>
                    <cylinder>
                        <radius>0.08</radius>
                        <length>0.05</length>
                    </cylinder>
                    </geometry>
                    <material>
                        <ambient>1.0 0.0 0.0 1</ambient>
                        <diffuse>1.0 0.0 0.0 1</diffuse>
                        <specular>1.0 0.0 0.0 1</specular>
                    </material>
                </visual>
                <collision name="left_back_wheel_collision">
                    <geometry>
                        <cylinder>
                            <radius>0.08</radius>
                            <length>0.05</length>
                        </cylinder>
                    </geometry>

                    <surface>
                        <friction>
                            <ode>
                                <mu>1.0</mu>
                                <mu2>1.0</mu2>
                            </ode>
                        </friction>
                    </surface>
                </collision>
            </link>

            <link name="right_front_wheel">
                <pose relative_to="chassis">0.194 -0.2872 0 -1.5707 0 0</pose>
                <inertial>
                <mass>1</mass>
                <inertia>
                    <ixx>0.043333</ixx>
                    <ixy>0</ixy>
                    <ixz>0</ixz>
                    <iyy>0.043333</iyy>
                    <iyz>0</iyz>
                    <izz>0.08</izz>
                </inertia>
                </inertial>
                <visual name="right_front_wheel_visual">
                <geometry>
                    <cylinder>
                        <radius>0.08</radius>
                        <length>0.05</length>
                    </cylinder>
                </geometry>
                <material>
                    <ambient>1.0 0.0 0.0 1</ambient>
                    <diffuse>1.0 0.0 0.0 1</diffuse>
                    <specular>1.0 0.0 0.0 1</specular>
                </material>
                </visual>
                <collision name="right_front_wheel_collision">
                    <geometry>
                        <cylinder>
                            <radius>0.08</radius>
                            <length>0.05</length>
                        </cylinder>
                    </geometry>

                    <surface>
                        <friction>
                            <ode>
                                <mu>1.0</mu>
                                <mu2>1.0</mu2>
                            </ode>
                        </friction>
                    </surface>
                </collision>
        </link>

        <link name="right_middle_wheel">
            <pose relative_to="chassis">0.0 -0.2872 0 -1.5707 0 0</pose>
            <inertial>
                <mass>1</mass>
                <inertia>
                <ixx>0.043333</ixx>
                <ixy>0</ixy>
                <ixz>0</ixz>
                <iyy>0.043333</iyy>
                <iyz>0</iyz>
                <izz>0.08</izz>
                </inertia>
            </inertial>
            <visual name="right_middle_wheel_visual">
                <geometry>
                <cylinder>
                    <radius>0.08</radius>
                    <length>0.05</length>
                </cylinder>
                </geometry>
                <material>
                <ambient>1.0 0.0 0.0 1</ambient>
                <diffuse>1.0 0.0 0.0 1</diffuse>
                <specular>1.0 0.0 0.0 1</specular>
                </material>
            </visual>
            <collision name="right_middle_wheel_collision">
                <geometry>
                    <cylinder>
                        <radius>0.08</radius>
                        <length>0.05</length>
                    </cylinder>
                </geometry>

                <surface>
                    <friction>
                        <ode>
                            <mu>1.0</mu>
                            <mu2>1.0</mu2>
                        </ode>
                    </friction>
                </surface>
            </collision>
            </link>

            <link name="right_back_wheel">
                <pose relative_to="chassis">-0.194 -0.2872 0 -1.5707 0 0</pose>
                <inertial>
                <mass>1</mass>
                <inertia>
                    <ixx>0.043333</ixx>
                    <ixy>0</ixy>
                    <ixz>0</ixz>
                    <iyy>0.043333</iyy>
                    <iyz>0</iyz>
                    <izz>0.08</izz>
                </inertia>
                </inertial>
                <visual name="right_back_wheel_visual">
                <geometry>
                    <cylinder>
                    <radius>0.08</radius>
                    <length>0.05</length>
                    </cylinder>
                </geometry>
                <material>
                    <ambient>1.0 0.0 0.0 1</ambient>
                    <diffuse>1.0 0.0 0.0 1</diffuse>
                    <specular>1.0 0.0 0.0 1</specular>
                </material>
                </visual>
                <collision name="right_back_wheel_collision">
                    <geometry>
                        <cylinder>
                            <radius>0.08</radius>
                            <length>0.05</length>
                        </cylinder>
                    </geometry>

                    <surface>
                        <friction>
                            <ode>
                                <mu>1.0</mu>
                                <mu2>1.0</mu2>
                            </ode>
                        </friction>
                    </surface>
                </collision>
            </link>

            <!--
            wheel joints.

            TODO: check these! i made a chatbot do it and idk how correct it is
            -->
            <joint name="left_front_wheel_joint" type="revolute">
                <pose relative_to="chassis">0.194 0.2872 0 -1.5707 0 0</pose>
                <parent>chassis</parent>
                <child>left_front_wheel</child>
                <axis>
                    <xyz>0 0 1</xyz>
                    <limits>
                        <lower>-1000</lower>
                        <upper>1000</upper>
                    </limits>
                    <dynamics>
                          <damping>0.5</damping>
                    </dynamics>
                </axis>
            </joint>

            <joint name="left_middle_wheel_joint" type="revolute">
                <pose relative_to="chassis">0.0 0.2872 0 -1.5707 0 0</pose>
                <parent>chassis</parent>
                <child>left_middle_wheel</child>
                <axis>
                    <xyz>0 0 1</xyz>
                    <limits>
                        <lower>-1000</lower>
                        <upper>1000</upper>
                    </limits>
                    <dynamics>
                          <damping>0.5</damping>
                    </dynamics>
                </axis>
            </joint>

            <joint name="left_back_wheel_joint" type="revolute">
                <pose relative_to="chassis">-0.194 0.2872 0 -1.5707 0 0</pose>
                <parent>chassis</parent>
                <child>left_back_wheel</child>
                <axis>
                    <xyz>0 0 1</xyz>
                    <limits>
                        <lower>-1000</lower>
                        <upper>1000</upper>
                    </limits>
                    <dynamics>
                          <damping>0.5</damping>
                    </dynamics>
                </axis>
            </joint>

            <joint name="right_front_wheel_joint" type="revolute">
                <pose relative_to="chassis">0.194 -0.2872 0 -1.5707 0 0</pose>
                <parent>chassis</parent>
                <child>right_front_wheel</child>
                <axis>
                    <xyz>0 0 1</xyz>
                    <limits>
                        <lower>-1000</lower>
                        <upper>1000</upper>
                    </limits>
                    <dynamics>
                          <damping>0.5</damping>
                    </dynamics>
                </axis>
            </joint>

            <joint name="right_middle_wheel_joint" type="revolute">
                <pose relative_to="chassis">0.0 -0.2872 0 -1.5707 0 0</pose>
                <parent>chassis</parent>
                <child>right_middle_wheel</child>
                <axis>
                    <xyz>0 0 1</xyz>
                    <limits>
                        <lower>-1000</lower>
                        <upper>1000</upper>
                    </limits>
                    <dynamics>
                          <damping>0.5</damping>
                    </dynamics>
                </axis>
            </joint>

            <joint name="right_back_wheel_joint" type="revolute">
                <pose relative_to="chassis">-0.194 -0.2872 0 -1.5707 0 0</pose>
                    <parent>chassis</parent>
                    <child>right_back_wheel</child>
                    <axis>
                        <xyz>0 0 1</xyz>
                        <limits>
                            <lower>-1000</lower>
                            <upper>1000</upper>
                        </limits>
                        <dynamics>
                              <damping>0.5</damping>
                        </dynamics>
                    </axis>
                </joint>
            </model>
    </world>
</sdf>
